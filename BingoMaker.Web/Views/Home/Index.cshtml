@model BingoMaker.Web.Models.BingoSettings

@{
    ViewBag.Title = "Bingo Card Maker";
}

<h2>Bingo Card Maker</h2>

@using (Html.BeginForm("index", "render")) {
    @Html.ValidationSummary(true)

    <div class="editor-label">
        @Html.LabelFor(model => model.Title)
    </div>
    <div class="editor-field">
        @Html.EditorFor(model => model.Title)
        @Html.ValidationMessageFor(model => model.Title)
    </div>

    <div class="editor-label">
        @Html.LabelFor(model => model.Subtitle)
    </div>
    <div class="editor-field">
        @Html.EditorFor(model => model.Subtitle)
        @Html.ValidationMessageFor(model => model.Subtitle)
    </div>

    <div class="editor-label">
        @Html.LabelFor(model => model.WordListBlob, "Word list - one word per line, or comma, or semicolon separated")
    </div>
    <div class="editor-field">
        @Html.EditorFor(model => model.WordListBlob)
        @Html.ValidationMessageFor(model => model.WordListBlob)
    </div>

    <div class="editor-label">
        @Html.LabelFor(model => model.CardCount, "Card count (4 to a page)")
    </div>
    <div class="editor-field">
        @Html.EditorFor(model => model.CardCount)
        @Html.ValidationMessageFor(model => model.CardCount)
    </div>

    <div class="editor-label">
        @Html.LabelFor(model => model.FreeText, "Free space text")
    </div>
    <div class="editor-field">
        @Html.EditorFor(model => model.FreeText)
        @Html.ValidationMessageFor(model => model.FreeText)
    </div>

    <div class="editor-label">
        @Html.LabelFor(model => model.Font)
    </div>
    <div class="editor-field">
        @Html.DropDownListFor(model => model.Font, Model.Fonts)
        @Html.ValidationMessageFor(model => model.Font)
    </div>

    <p>
        <input type="submit" value="Create" />
    </p>
}

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
